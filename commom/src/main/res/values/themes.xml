<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Dreamify.Theme" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:alertDialogStyle">@style/Kugou.AlertDialog</item> -->
        <item name="android:imageButtonStyle">@style/Kugou.Widget.ImageButton</item>
        <item name="android:buttonStyle">@style/Kugou.Widget.Dialog.Button</item>
        <item name="android:textColorPrimary">@color/max_text_color</item>
        <item name="android:checkboxStyle">@style/Kugou.Widget.CheckBox</item>
        <item name="android:editTextStyle">@style/Kugou.Widget.EditText</item>
        <item name="android:progressBarStyleSmall">@style/Kugou.Widget.ProgressBar.Small</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_handle_vertical</item>
    </style>
    <style name="Dreamify.Theme.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:buttonStyle">@style/Kugou.Widget.Dialog.Button</item>
        <!-- <item name="android:alertDialogStyle">@style/Kugou.AlertDialog</item> -->
        <item name="android:imageButtonStyle">@style/Kugou.Widget.ImageButton</item>
        <item name="android:textColorPrimary">@color/max_text_color</item>
        <item name="android:editTextStyle">@style/Kugou.Widget.EditText</item>
        <item name="android:progressBarStyleSmall">@style/Kugou.Widget.ProgressBar.Small</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_handle_vertical</item>
    </style>

</resources>